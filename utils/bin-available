#!/bin/bash
# Faults if isnt installed within the current path, otherwise exits normally
# Usage: ./utils/bin-available <bin>
#
# @example test if the "foobar" binary is available within a Bash If
# if [ `./utils/bin-available dtrx` == 1 ]; then
#   echo "Is available"
# fi

[ -z "$INIT" ] && source common

if which "$1" >/dev/null 2>/dev/null; then
	echo '1'
else
	echo '0'
fi

