#!/bin/bash
# Install desktop theme packages

source common

INIT status "Install desktop theme PPA - Plata"
sudo add-apt-repository -y ppa:tista/plata-theme


INIT status "Install all theme packages"
INIT apt-install \
	adapta-gtk-theme \
	arc-theme \
	materia-gtk-theme \
	oxygen-cursor-theme \
	plata-theme \
	shiki-brave-theme \
	shiki-colors-xfwm-theme \
