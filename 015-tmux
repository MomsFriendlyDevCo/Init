#!/bin/bash
# Install tmux@latest from source

source common

echoStatus "Installing prerequisites"
sudo apt install -y autoconf automake byacc libevent-dev libncurses-dev pkg-config

echoStatus "Downloading Tmux"
mkdir -p ~/src 2>/dev/null
cd ~/src
git clone https://github.com/tmux/tmux.git

echoStatus "Building Tmux"
cd tmux
sh autogen.sh
./configure
make
sudo cp tmux /usr/bin/tmux
