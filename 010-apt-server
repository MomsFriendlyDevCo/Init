#!/bin/bash
# Install packages suitable for use as a server
# REQUIRES: 007-apt-update

source common

echoStatus "Remove Server unsuitable APT packages"

sudo apt-get remove -y \
samba


echoStatus "Install Server APT packages"
sudo apt-get install -y \
autossh \
bcrypt \
bmon \
build-essential \
bzip2 \
curl \
dos2unix \
dtrx \
duc \
expect \
ftp \
htop \
git \
glances \
html2ps \
iftop \
imagemagick \
iotop \
iwatch \
lftp \
lsof \
make \
mc \
molly-guard \
moreutils \
mountpy \
mutt \
ncftp \
netcat \
nmap \
ntp \
openssl \
perl \
pv \
pwgen \
screen \
slurm \
sshfs \
sshpass \
tar \
tcpdump \
tmux \
telnet \
tofrodos \
traceroute \
vim \
w3m \
wget \
whois \

