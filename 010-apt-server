#!/bin/bash
# Install packages suitable for use as a server
# REQUIRES: 007-apt-update

source common

init status "Remove Server unsuitable APT packages"

sudo apt-get remove -y \
samba


init status "Install Server APT packages"
init apt-install \
	autossh \
	bmon \
	build-essential \
	bzip2 \
	curl \
	dos2unix \
	duc \
	expect \
	ftp \
	htop \
	git \
	git-lfs \
	glances \
	html2ps \
	iftop \
	imagemagick \
	iotop \
	libterm-readkey-perl \
	lftp \
	lsof \
	make \
	mc \
	molly-guard \
	moreutils \
	mountpy \
	mutt \
	ncftp \
	netcat \
	net-tools \
	nmap \
	ntp \
	openssl \
	perl \
	pv \
	pwgen \
	screen \
	slurm \
	sshfs \
	sshpass \
	tar \
	tcpdump \
	tmux \
	telnet \
	tofrodos \
	traceroute \
	vim \
	w3m \
	wget \
	whois \

